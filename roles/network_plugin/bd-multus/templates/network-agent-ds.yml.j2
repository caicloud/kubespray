---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  labels:
    k8s-app: network-agent
  name: network-agent
  namespace: kube-system
spec:
  selector:
    matchLabels:
      k8s-app: network-agent
  template:
    metadata:
      labels:
        k8s-app: network-agent
    spec:
      containers:
      - env:
        - name: SYNC_SWITCH
          value: "on"
        - name: HOST_IP
          valueFrom:
            fieldRef:
              apiVersion: v1
              fieldPath: status.hostIP
        image: {{ network_agent_image_repo }}:{{ network_agent_image_tag }}
        imagePullPolicy: Always
        name: network-agent
        args:
        - --service-ip-range={{ kube_service_addresses }}
        resources:
          requests:
            cpu: 50m
            memory: 20Mi
          limits:
            cpu: 350m
            memory: 300Mi
        securityContext:
          privileged: true
          procMount: Default
        volumeMounts:
        - mountPath: /var/run/network-agent
          name: var-run-network-agent
        - mountPath: /lib/modules
          name: lib-modules
          readOnly: true
        - mountPath: /run/xtables.lock
          name: xtables-lock
          readOnly: false
      dnsPolicy: ClusterFirst
      hostNetwork: true
      nodeSelector:
        kubernetes.io/os: linux
      priorityClassName: system-node-critical
      serviceAccountName: network-agent
      tolerations:
      - effect: NoSchedule
        operator: Exists
      - effect: NoExecute
        operator: Exists
      volumes:
      - hostPath:
          path: /var/run/network-agent
          type: DirectoryOrCreate
        name: var-run-network-agent
      - hostPath:
          path: /lib/modules
          type: ""
        name: lib-modules
      - hostPath:
          path: /run/xtables.lock
          type: FileOrCreate
        name: xtables-lock
  updateStrategy:
    rollingUpdate:
      maxUnavailable: 1
    type: RollingUpdate
